<resources xmlns:tools="http://schemas.android.com/tools">

    <bool name="lightNavEnabled">false</bool>

    <!-- Base application theme. -->
    <style name="Theme.EasyNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Disable forced dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultNight</item>
        <item name="colorPrimaryVariant">@color/defaultNightDark</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/defaultNight</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EasyNote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EasyNote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyNote.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>